<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
       <ul class="navbar-nav mr-auto">
        <li class="nav-brand"><img class="nav-brand" src="../public/assets/fantasy-logo.png"></li>
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/">Leaderboard</a></li>
      {{#if loggedin}}
        <li class="nav-item"><a class="nav-link" href="/">Portfolio</a></li>
        <li class="nav-item"><a class="nav-link" href="/">Logout</a></li>
      {{else}}
        <li class="nav-item"><a class="nav-link" href="/">Login</a></li>
       <li class="nav-item"><a class="nav-link" href="/">Sign-up</a></li>
      {{/if}}
    </ul>
    </nav>
  </header>

<form class="challenge-form" data-id="{{challenge.id}}">
  <div class="form-group">
    <h2>Enter Challenge {{challenge.id}}</h2>
    {{#each coins as |coin|}}
      <label for="coin{{coin.id}}">{{coin.name}} ({{coin.ticker_symbol}})</label>
      <input type="number" class="form-control coin-input-amount" id="coin{{coin.id}}" aria-describedby="coin{{coin.id}}Input" placeholder="0.0" data-id="{{coin.id}}">
      <br/>
    {{/each}}
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<script src="/js/submitPortfolio.js"></script>

<footer>
      <p>@Copyright FantasyCrypto</p>
  </footer>