<section>
  <div class="row d-flex justify-content-center align-items-center h-50">
    <div class="card p-md-5 mx-md-4" style="width: 34rem;">
      <div class="thumbnail p-md-3 mx-md-5">
        <img src="/assets/fantasy-logo.png" alt="logo" class="img-thumbnail" />
      </div>

      <form class="form login-form">
        <p>Please login to your account</p>

        <div class="form-outline">
          <input
            type="email"
            id="email-login"
            class="form-control"
            placeholder="Email"/>
          <label class="form-label" for="email">Email</label>
        </div>

        <div class="form-outline">
          <input
            type="password"
            id="password-login"
            class="form-control"
            placeholder="Password"/>
          <label class="form-label" for="password">Password</label>
        </div>

        <div class="text-center pt-1 mb-3 pb-1">
          <button
            class="btn btn-info btn-block fa-lg gradient-custom-2 mb-3"
            type="submit">Log in</button>
        </div>

        <div class="d-flex align-items-center justify-content-center pb-4">
          <p class="mb-0 me-2 px-2">Don't have an account?</p>
          <button type="button" class="btn btn-success">
            <a href="./signup.handlebars"></a>Create new</button>
        </div>
      </form>
    </div>
  </div>
</section>

<script src="./js/login.js"></script>