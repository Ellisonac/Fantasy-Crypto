<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">

    <section>
      <div class="container py-4 h-50" style="width: 35rem">
        <div class="row d-flex justify-content-center align-items-center h-50">
          <div class="col-xl-10">
            <div class="card rounded-3 text-black">
              <div class="row g-0">
                <div class="col-lg-6">
                  <div class="card-body p-md-5 mx-md-3" style="width: 25rem;">

                    <div class="thumbnail">
                      <img src="../public/assets/fantasy-logo.png" alt="logo" class="img-thumbnail">

                    </div>

                    <form>
                      <p>Please login to your account</p>

                      <div class="form-outline mb-6">
                        <input type="email" id="email-login" class="form-control" placeholder="Email" />
                        <label class="form-label" for="email">Email</label>
                      </div>

                      <div class="form-outline mb-6">
                        <input type="password" id="password-login" class="form-control" placeholder="Password" />
                        <label class="form-label" for="password">Password</label>
                      </div>

                      <div class="text-center pt-1 mb-5 pb-1">
                        <button class="btn btn-info btn-block fa-lg gradient-custom-2 mb-3" type="button"><a href="./homepage.handlebars"></a>Log
                          in</button>
                      </div>

                      <div class="d-flex align-items-center justify-content-center pb-4">
                        <p class="mb-0 me-2 px-2">Don't have an account?</p>
                        <button type="button" class="btn btn-outline-success"><a href="./signup.handlebars"></a>Create new</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
  </section>

  <script src="./js/login.js"></script>