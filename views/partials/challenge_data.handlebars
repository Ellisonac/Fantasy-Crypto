<section>
  <div class="row d-flex justify-content-center align-items-center h-50">
    <div class="card p-md-5 mx-md-4" style="width: 34rem;">
      <div class="thumbnail p-md-5 mx-md-4">
        <img src="/assets/fantasy-logo.png" alt="logo" class="img-thumbnail" />
      </div>

      <div class="challenge-form" data-id="{{challenge.id}}">
        <h2>Challenge {{challenge.id}} - Capital
          {{challenge.capital}}
        </h2>
        <p>Status: {{challenge.status}}</p>
        {{!-- <p>Challenge is closed to new submissions</p> --}}
        {{!-- <p>Total submissions: {{totalSubmissions}}</p> --}}
        
        <div class="form-outline">
          {{#each coins as |coin|}}
            <p>{{coin.name}}
              ({{coin.ticker_symbol}}) - Starting Value: ${{coin.start_value}}</p>
            <br/>
          {{/each}}
        </div>

      </div>
    </div>
  </div>
</section>