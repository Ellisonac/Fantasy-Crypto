<section>
  <div class="row d-flex justify-content-center align-items-center h-50">
    <div class="card p-md-5 mx-md-4" style="width: 34rem;">
      <div class="thumbnail p-md-5 mx-md-4">
        <img src="/assets/fantasy-logo.png" alt="logo" class="img-thumbnail" />
      </div>

      <form class="challenge-form" data-id="{{challenge.id}}">
        <h2>Enter Challenge
          {{challenge.id}}- Capital
          {{challenge.capital}}
        </h2>
        
        <div class="form-outline">
          {{#each coins as |coin|}}
            <label for="coin{{coin.id}}">{{coin.name}}
              ({{coin.ticker_symbol}})
            </label>
            <input
              type="number"
              class="form-control coin-input-amount"
              id="coin{{coin.id}}"
              aria-describedby="coin{{coin.id}}Input"
              placeholder="0.0"
              data-id="{{coin.id}}"/>
            <p>Starting Value: {{coin.start_value}}</p>
            <br/>
          {{/each}}
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>

      </form>
    </div>
  </div>
</section>

<script src="/js/submitPortfolio.js"></script>