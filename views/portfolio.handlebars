<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
       <ul class="navbar-nav mr-auto">
        <li class="nav-brand"><img class="nav-brand" src="../public/assets/fantasy-logo.png"></li>
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/">Leaderboard</a></li>
      {{#if loggedin}}
        <li class="nav-item"><a class="nav-link" href="/">Portfolio</a></li>
        <li class="nav-item"><a class="nav-link" href="/">Logout</a></li>
      {{else}}
        <li class="nav-item"><a class="nav-link" href="/">Login</a></li>
       <li class="nav-item"><a class="nav-link" href="/">Sign-up</a></li>
      {{/if}}
    </ul>
    </nav>
  </header>

<ul class="portfolio">
  <h3>Portfolio {{portfolio.id}} - Challenge {{portfolio.challenge_id}}</h3>
  {{! Display Challenge link  }}

  {{#each coinEntries as |coin|}}
    <div class="card">
      <h3>Coin: {{coin.name}}</h3>
      <p class="coin-description">Amount: {{coin.amount}}</p>
      {{! Calculate value before render }}
      <p class="coin-description">Value: {{coin.value}}</p>
    </div>
  {{/each}}
</ul>

<footer>
      <p>@Copyright FantasyCrypto</p>
  </footer>
